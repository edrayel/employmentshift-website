# EmploymentShift React App - Development Environment
# Proto mode uses mock data for development

# Application Mode
VITE_APP_MODE=proto
# Options: 'proto' (mock data) or 'live' (WordPress API)

# WordPress Configuration (for live mode)
VITE_WORDPRESS_BASE_URL=https://employmentshift.com
VITE_WP_API_URL=https://employmentshift.com/wp-json/wp/v2
VITE_WP_REST_API_NAMESPACE=wp/v2

# Application Settings
VITE_APP_NAME=EmploymentShift
VITE_APP_TAGLINE=Architecting the Future
VITE_NODE_ENV=development

# Contact Information
VITE_CONTACT_PHONE=+234 705 143 2811
VITE_CONTACT_EMAIL=hello@employmentshift.com

# Development Settings
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_MOCK_DELAY=true
VITE_MOCK_DELAY_MS=500

# Image Placeholders
VITE_USE_PLACEHOLDER_IMAGES=true
VITE_PLACEHOLDER_SERVICE=https://via.placeholder.com

# Analytics (disabled in development)
VITE_GOOGLE_ANALYTICS_ID=
VITE_GOOGLE_TAG_MANAGER_ID=